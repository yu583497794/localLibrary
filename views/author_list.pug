extends  layout

block content
  h1= title

  ul
  each author in  author_list
    li
      a(href=author.url) #{author.name}
      | (#{author.date_of_birth_formatted} - 
      if (author.date_of_death_formatted)
        span #{author.date_of_death_formatted} 
      | )
  else
    li There are no authors.